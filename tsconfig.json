{
  "compilerOptions": {
    "target": "ESNext",
    "allowJs": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "esm/",
    "esModuleInterop": true,
    "declaration": true,
    "stripInternal": true
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["src/entry.ts"]
}